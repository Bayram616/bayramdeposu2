<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AkilliAlisverisApp.ViewModels"
             x:Class="AkilliAlisverisApp.Views.TipCategoryView"
             Title="Makale Kategorileri">
    <Grid>
        <StackLayout Padding="10">
            <CollectionView ItemsSource="{Binding TipCategories}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BorderColor="LightGray" CornerRadius="10">
                            <StackLayout>
                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout Padding="20" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="Makale kategorileri yükleniyor veya bulunamadı." HorizontalTextAlignment="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </StackLayout>

        <BoxView BackgroundColor="Black"
                 Opacity="0.5"
                 IsVisible="{Binding IsBusy}" />

        <ActivityIndicator IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Color="Blue" />
    </Grid>
</ContentPage>