<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AkilliAlisverisApp.ViewModels"
             xmlns:models="clr-namespace:AkilliAlisverisApp.Models"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="AkilliAlisverisApp.Views.ProductView"
             Title="İndirimli Ürünler"
             x:DataType="viewmodels:ProductViewModel">

    <ContentPage.Behaviors>
        <mct:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding LoadProductsCommand}" />
    </ContentPage.Behaviors>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <SearchBar Placeholder="Ürün veya kategori ara..."
                       SearchCommand="{Binding SearchProductsCommand}"
                       SearchCommandParameter="{Binding Text, Source={RelativeSource Self}}"
                       CancelButtonColor="{AppThemeBinding Light=Black, Dark=White}" />

            <CollectionView ItemsSource="{Binding ProductGroups}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:ProductGroup">
                        <VerticalStackLayout Spacing="5" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding CategoryName}" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center"/>
                                <Button Text="Tümünü Gör" Grid.Column="1" Style="{StaticResource TextButton}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProductViewModel}}, Path=NavigateToProductCategoryCommand}" 
                                        CommandParameter="{Binding CategoryName}"/>
                            </Grid>

                            <CollectionView ItemsSource="{Binding .}"
                                            HeightRequest="150"
                                            ItemsLayout="HorizontalList">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:Product">
                                        <Border StrokeShape="RoundRectangle 10" Padding="10" Margin="5" WidthRequest="180" HeightRequest="140"
                                                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray950}}"
                                                StrokeThickness="1">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProductViewModel}}, Path=NavigateToProductDetailCommand}"
                                                                      CommandParameter="{Binding .}"/>
                                            </Border.GestureRecognizers>
                                            <VerticalStackLayout Spacing="5">
                                                <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="80" WidthRequest="160"/>
                                                <Label Text="{Binding ProductName}" FontAttributes="Bold" MaxLines="1" LineBreakMode="TailTruncation"/>
                                                <Label Text="{Binding Price, StringFormat='₺ {0:F2}'}" FontSize="Small" TextColor="Green"/>
                                                <Label Text="{Binding MarketName}" FontSize="Small" TextColor="Gray"/>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>