<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AkilliAlisverisApp.ViewModels"
             xmlns:models="clr-namespace:AkilliAlisverisApp.Models"
             x:Class="AkilliAlisverisApp.Views.ProductDetailPage"
             x:DataType="viewmodels:ProductDetailViewModel"
             Title="{Binding CurrentProduct.ProductName}">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="15">
            <!-- Ürün görseli -->
            <Image Source="{Binding CurrentProduct.ImageUrl}"
                   Aspect="AspectFill"
                   HeightRequest="200"
                   HorizontalOptions="Center" />

            <!-- Ürün bilgileri -->
            <Label Text="{Binding CurrentProduct.MarketName}" FontAttributes="Bold" FontSize="16" TextColor="DarkGray" />
            <Label Text="{Binding CurrentProduct.Price, StringFormat='Fiyat: ₺ {0:F2}'}" FontSize="18" TextColor="Green" />
            <Label Text="{Binding CurrentProduct.Description}" FontSize="14" TextColor="Black" />

            <!-- Bildirim Planla & Listeye Ekle -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="Listeye Ekle"
                        Command="{Binding AddProductToShoppingListCommand}"
                        CommandParameter="{Binding CurrentProduct}" />
                <Button Text="Bildirim Planla"
                        Command="{Binding ScheduleProductNotificationCommand}" />
            </HorizontalStackLayout>

            <!-- Puan Ver -->
            <Label Text="Puan Ver (1-5):" FontSize="14" />
            <Entry Placeholder="Örn: 4"
                   Keyboard="Numeric"
                   Text="{Binding UserRating, Mode=TwoWay}" />

            <!-- Yorum Yap -->
            <Label Text="Yorum Yaz:" FontSize="14" />
            <Editor Placeholder="Yorumunuzu yazın..."
                    AutoSize="TextChanges"
                    HeightRequest="80"
                    Text="{Binding UserComment, Mode=TwoWay}" />
            <Button Text="Gönder"
                    Command="{Binding SubmitReviewCommand}" />

            <!-- Yorumlar Listesi -->
            <Label Text="Yorumlar" FontAttributes="Bold" FontSize="16" Margin="0,10,0,0" />
            <CollectionView ItemsSource="{Binding ProductReviews}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ProductReview">
                        <Frame Margin="5" Padding="10" BorderColor="LightGray" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding User.FullName}" FontAttributes="Bold" FontSize="14" />
                                <Label Text="{Binding Rating, StringFormat='Puan: {0}/5'}" FontSize="13" TextColor="DarkOrange" />
                                <Label Text="{Binding Comment}" FontSize="13" TextColor="Black" />
                                <Label Text="{Binding CreatedDate, StringFormat='Tarih: {0:dd.MM.yyyy HH:mm}'}" FontSize="12" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
