<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
           xmlns:viewmodels="clr-namespace:AkilliAlisverisApp.ViewModels"
           x:Class="AkilliAlisverisApp.Views.LegalWarningPopup"
           x:DataType="viewmodels:LegalWarningPopupViewModel">

    <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="White"
                         WidthRequest="300" HeightRequest="400">

        <Label Text="Yasal UyarÄ±"
               FontSize="Title"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Black" />

        <ScrollView>
            <Label Text="{Binding LegalWarningText}"
                   FontSize="Small"
                   TextColor="Gray"
                   LineBreakMode="WordWrap" />
        </ScrollView>

        <Button Text="Kapat"
                Command="{Binding ClosePopupCommand}"
                HorizontalOptions="FillAndExpand"
                BackgroundColor="LightGray"
                TextColor="Black" />
    </VerticalStackLayout>
</mct:Popup>
