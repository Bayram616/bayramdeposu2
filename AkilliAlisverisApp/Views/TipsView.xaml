<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AkilliAlisverisApp.ViewModels"
             x:Class="AkilliAlisverisApp.Views.TipsView" Title="İpuçları">
    <ContentPage.Behaviors>
    </ContentPage.Behaviors>

    <Grid>
        <StackLayout Padding="10">
            <Button Text="Sende Ekle"
                    HorizontalOptions="End"
                    Margin="0,0,10,10"
                    Command="{Binding NavigateToInsertTipCommand}" />
            <Label Text="İpuçları" FontSize="24" HorizontalOptions="CenterAndExpand" Margin="0,0,0,10"/>

            <CollectionView ItemsSource="{Binding Tips}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BorderColor="LightGray" CornerRadius="10">
                            <StackLayout Padding="5">
                                <Label Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black" />

                                <Label Text="{Binding ShortContent}"
                                       FontSize="14"
                                       TextColor="Gray"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="3" />

                                <Label Text="{Binding PublishDate, StringFormat='Yayınlanma Tarihi: {0:dd.MM.yyyy}'}"
                                       FontSize="12"
                                       TextColor="DarkGray"
                                       HorizontalOptions="End"
                                       Margin="0,5,0,0" />

                                <Grid ColumnDefinitions="Auto,Auto,*,Auto" Margin="0,10,0,0">
                                    <HorizontalStackLayout Grid.Column="0" Spacing="5">
                                        <ImageButton Source="like_icon.png" WidthRequest="20" HeightRequest="20"
                                                     Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TipsViewModel}}, Path=LikeTipCommand}"
                                                     CommandParameter="{Binding .}" />
                                        <Label Text="{Binding LikeCount}" VerticalOptions="Center" />
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Grid.Column="1" Spacing="5" Margin="10,0,0,0">
                                        <ImageButton Source="dislike_icon.png" WidthRequest="20" HeightRequest="20"
                                                     Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TipsViewModel}}, Path=DislikeTipCommand}"
                                                     CommandParameter="{Binding .}" />
                                        <Label Text="{Binding DislikeCount}" VerticalOptions="Center" />
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Grid.Column="3" Spacing="5">
                                        <ImageButton Source="comment_icon.png" WidthRequest="20" HeightRequest="20"
                                                     Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TipsViewModel}}, Path=ShowCommentsCommand}"
                                                     CommandParameter="{Binding .}" />
                                        <Label Text="{Binding CommentCount}" VerticalOptions="Center" />
                                    </HorizontalStackLayout>
                                </Grid>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout Padding="20" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="İpuçları yükleniyor veya bulunamadı." HorizontalTextAlignment="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </StackLayout>

        <BoxView BackgroundColor="Black"
                 Opacity="0.5"
                 IsVisible="{Binding IsBusy}" />

        <ActivityIndicator IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Color="Blue" />
    </Grid>
</ContentPage>