<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AkilliAlisverisApp.ViewModels"
             x:Class="AkilliAlisverisApp.Views.LoginPage"
             x:DataType="vm:LoginViewModel"
             Title="Giriş Yap">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Akıllı Alışveriş Uygulamasına Hoş Geldiniz" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   HorizontalTextAlignment="Center"
                   Margin="0,40,0,20" />

            <Entry Placeholder="E-posta adresiniz"
                   Text="{Binding Email}"
                   Keyboard="Email"
                   ReturnType="Next" />

            <Entry Placeholder="Şifreniz"
                   Text="{Binding Password}"
                   IsPassword="True"
                   ReturnType="Go"
                   Completed="OnLoginCompleted" />

            <Button Text="Giriş Yap"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#007AFF"
                    TextColor="White" />

            <Label Text="Hesabınız yok mu?"
                   HorizontalOptions="Center" />

            <Button Text="Kayıt Ol"
                    Command="{Binding NavigateToRegisterCommand}"
                    BackgroundColor="Transparent"
                    TextColor="#007AFF" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>