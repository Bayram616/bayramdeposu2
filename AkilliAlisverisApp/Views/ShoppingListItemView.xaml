<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AkilliAlisverisApp.ViewModels"
             xmlns:models="clr-namespace:AkilliAlisverisApp.Models"
             x:Class="AkilliAlisverisApp.Views.ShoppingListItemView"
             Title="Liste Detayı"
             x:DataType="vm:ShoppingListItemViewModel">

    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="10" Padding="15">
        <Frame Grid.Row="0" CornerRadius="8" Padding="15" HasShadow="True" BackgroundColor="{AppThemeBinding Light=White, Dark=#333333}">
            <StackLayout Spacing="10">
                <Label Text="Yeni Not Ekle" FontAttributes="Bold" FontSize="Medium" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

                <Entry Placeholder="Ürün Adı (örn: Süt)"
                       Text="{Binding NewItemName}"
                       ReturnType="Next"
                       ClearButtonVisibility="WhileEditing"/>

                <Entry Placeholder="Miktar (örn: 2)"
                       Text="{Binding Quantity}"
                       Keyboard="Numeric"
                       ClearButtonVisibility="WhileEditing"/>

                <Entry Placeholder="Not (isteğe bağlı)"
                       Text="{Binding Note}"
                       ReturnType="Done"
                       ClearButtonVisibility="WhileEditing"/>

                <Button Text="Listeye Ekle"
                        Command="{Binding AddItemCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"/>
            </StackLayout>
        </Frame>

        <CollectionView Grid.Row="1" ItemsSource="{Binding ShoppingListItems}" SelectionMode="None" Margin="0,10,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ShoppingListItem">
                    <Frame BorderColor="LightGray" Padding="10" Margin="5" CornerRadius="5" HasShadow="False">
                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10" VerticalOptions="Center">
                            <StackLayout Grid.Column="0" VerticalOptions="Center">
                                <Label Text="{Binding CustomProductName}" FontAttributes="Bold" FontSize="Large" />
                                <Label Text="{Binding Quantity, StringFormat='Miktar: {0}'}" FontSize="Small" TextColor="Gray" />
                                <Label Text="{Binding Note}" FontSize="Small" TextColor="DarkGray" IsVisible="{Binding Note, Converter={StaticResource StringToBoolConverter}}" />
                            </StackLayout>

                            <Button Grid.Column="2"
                                    Text="Sil"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ShoppingListItemViewModel}}, Path=DeleteItemCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="Red"
                                    TextColor="White"
                                    CornerRadius="20"
                                    WidthRequest="70"
                                    HeightRequest="40"
                                    FontSize="Small"
                                    VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <StackLayout Padding="20" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="Bu liste henüz boş. Yukarıdan yeni notlar ekleyebilirsiniz." HorizontalTextAlignment="Center" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>