<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AkilliAlisverisApp.ViewModels"
             x:Class="AkilliAlisverisApp.Views.TipsInsertView"
             x:DataType="vm:TipsInsertViewModel"
             Title="İpucu Ekle">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Yeni İpucu Ekle" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />

                <Frame Padding="15" CornerRadius="10" BorderColor="LightGray">
                    <VerticalStackLayout>
                        <Label Text="Başlık:" FontAttributes="Bold" />
                        <Entry Text="{Binding Title}" Placeholder="Başlık girin" MaxLength="100" />
                    </VerticalStackLayout>
                </Frame>

                <Frame Padding="15" CornerRadius="10" BorderColor="LightGray">
                    <VerticalStackLayout>
                        <Label Text="İçerik:" FontAttributes="Bold" />
                        <Editor Text="{Binding Content}" Placeholder="Detayları yazın" AutoSize="TextChanges" HeightRequest="150" MaxLength="1000" />
                    </VerticalStackLayout>
                </Frame>

                <Frame Padding="15" CornerRadius="10" BorderColor="LightGray">
                    <VerticalStackLayout>
                        <Label Text="Kategori:" FontAttributes="Bold" />
                        <Picker ItemsSource="{Binding Categories}"
                                SelectedItem="{Binding SelectedCategory}"
                                ItemDisplayBinding="{Binding Name}"
                                Title="Kategori seçin" />
                    </VerticalStackLayout>
                </Frame>

                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding IsLegalAccepted}" />
                    <Label VerticalOptions="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Yasal Uyarıyı " />
                                <Span Text="okudum ve onaylıyorum. " />
                                <Span Text="(Oku)" TextColor="Blue" FontAttributes="Bold">
                                    <Span.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ShowLegalWarningCommand}" />
                                    </Span.GestureRecognizers>
                                </Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </HorizontalStackLayout>

                <Button Text="Gönder" Command="{Binding SubmitTipCommand}" />

            </VerticalStackLayout>
        </ScrollView>

        <BoxView BackgroundColor="Black" Opacity="0.4" IsVisible="{Binding IsBusy}" />
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="Blue" VerticalOptions="Center" HorizontalOptions="Center" />
    </Grid>
</ContentPage>
