<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AkilliAlisverisApp.ViewModels"
             x:Class="AkilliAlisverisApp.Views.UserView"
             x:DataType="vm:UserViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Frame Padding="15" CornerRadius="10" BorderColor="LightGray">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Kullanıcı Bilgileri" FontSize="Large" FontAttributes="Bold"/>

                    <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto" RowSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0" Text="Kullanıcı Adı:" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding CurrentUser.UserName}" VerticalTextAlignment="Center"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Tam Adı:" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding CurrentUser.FullName}" VerticalTextAlignment="Center"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="E-posta:" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding CurrentUser.Email}" VerticalTextAlignment="Center"/>

                        <Label Grid.Row="3" Grid.Column="0" Text="Telefon:" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding CurrentUser.PhoneNumber}" VerticalTextAlignment="Center"/>

                        <Label Grid.Row="4" Grid.Column="0" Text="Şehir:" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                        <Label Grid.Row="4" Grid.Column="1" Text="{Binding CurrentUser.City.CityName}" VerticalTextAlignment="Center"/>

                        <Label Grid.Row="5" Grid.Column="0" Text="İlçe:" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                        <Label Grid.Row="5" Grid.Column="1" Text="{Binding CurrentUser.District.DistrictName}" VerticalTextAlignment="Center"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Bilgileri Güncelle" 
                    Command="{Binding UpdateInfoCommand}" 
                    IsEnabled="False" 
                    Margin="0,20,0,0"/>

            <Button Text="Çıkış Yap" 
                    Command="{Binding LogoutCommand}" 
                    BackgroundColor="Red" 
                    TextColor="White"
                    Margin="0,10,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
