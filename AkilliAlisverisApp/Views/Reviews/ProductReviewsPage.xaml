<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:AkilliAlisverisApp.ViewModels.Reviews"
    x:Class="AkilliAlisverisApp.Views.Reviews.ProductReviewsPage"
    x:DataType="viewModels:ProductReviewViewModel"
    Title="Yorumlar">


    <CollectionView ItemsSource="{Binding ProductReviews}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="10" BorderColor="Gray">
                    <StackLayout>
                        <Label Text="{Binding Comment}" />
                        <Label Text="{Binding Rating}" FontAttributes="Bold" />
                        <Label Text="{Binding CreatedDate, StringFormat='{0:dd.MM.yyyy}'}" FontSize="12" TextColor="Gray"/>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
