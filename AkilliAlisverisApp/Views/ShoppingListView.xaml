<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AkilliAlisverisApp.ViewModels"
             xmlns:models="clr-namespace:AkilliAlisverisApp.Models"
             xmlns:converters="clr-namespace:AkilliAlisverisApp.Converters"
             x:Class="AkilliAlisverisApp.Views.ShoppingListView"
             Title="Alışveriş Listelerim"
             x:DataType="vm:ShoppingListViewModel">

    <ContentPage.Resources>
    </ContentPage.Resources>

    <StackLayout Padding="20" Spacing="20">

        <Label Text="Market Seçerek Yeni Liste Oluşturun:" FontAttributes="Bold" />
        <Picker ItemsSource="{Binding Markets}"
                SelectedItem="{Binding SelectedMarket}"
                Title="Market Seçin"
                HorizontalOptions="FillAndExpand">
            <Picker.ItemDisplayBinding>
                <Binding Path="MarketName" />
            </Picker.ItemDisplayBinding>
        </Picker>

        <Button Text="Yeni Liste Ekle" Command="{Binding AddListCommand}" HorizontalOptions="FillAndExpand" />

        <Label Text="Market Bazlı Listeleriniz" FontAttributes="Bold" Margin="0,20,0,0" HorizontalOptions="Center" FontSize="18" />
        <CollectionView ItemsSource="{Binding ShoppingLists}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ShoppingList">
                    <Frame BorderColor="LightGray" Padding="10" Margin="5" CornerRadius="5" HasShadow="True">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10" VerticalOptions="Center">
                            <Image Grid.Column="0"
                                   Source="{Binding Market.LogoUrl}"
                                   Aspect="AspectFit"
                                   HeightRequest="40"
                                   WidthRequest="40"
                                   VerticalOptions="Center">
                                <Image.Triggers>
                                    <DataTrigger TargetType="Image" Binding="{Binding Market.LogoUrl}" Value="{x:Null}">
                                        <Setter Property="Source" Value="placeholder_logo.png" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Image" Binding="{Binding Market.LogoUrl}" Value="">
                                        <Setter Property="Source" Value="placeholder_logo.png" />
                                    </DataTrigger>
                                </Image.Triggers>
                            </Image>

                            <StackLayout Grid.Column="1" VerticalOptions="Center">
                                <Label Text="{Binding Market.MarketName}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding CreatedDate, StringFormat='Oluşturulma: {0:dd.MM.yyyy}'}" FontSize="12" TextColor="Gray" />
                            </StackLayout>

                            <Button Grid.Column="2"
                                    Text="+"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ShoppingListViewModel}}, Path=GoToShoppingListItemCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    CornerRadius="20"
                                    FontSize="20"
                                    FontAttributes="Bold"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <StackLayout Padding="20" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="Henüz alışveriş listeniz bulunmuyor. Yukarıdan bir market seçerek yeni bir liste oluşturabilirsiniz." HorizontalTextAlignment="Center" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </StackLayout>
</ContentPage>